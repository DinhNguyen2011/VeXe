@model Asp.netWebDatVe.Models.Vitrighe

@{
    ViewData["Title"] = "Thêm/Sửa vị trí ghế";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label>Tên ghế</label>
        <input asp-for="Tenvitri" class="form-control" />
    </div>
    <div class="form-group">
        <label>Biển số</label>
        <select asp-for="Bienso" class="form-control" asp-items="@(new SelectList(ViewBag.XeList, "Bienso", "Bienso"))"></select>
    </div>
    <div class="form-group">
        <label>Trạng thái</label>
        <select asp-for="Trangthai" class="form-control">
            <option value="true">Đang sử dụng</option>
            <option value="false">Trống</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
</form>
