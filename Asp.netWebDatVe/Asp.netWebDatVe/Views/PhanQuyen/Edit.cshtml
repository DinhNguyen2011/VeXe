@model Asp.netWebDatVe.Models.PhanQuyen

@{
    ViewData["Title"] = "Chỉnh sửa phân quyền";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa phân quyền</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaQuyen" />
    <div class="form-group">
        <label asp-for="TenQuyen" class="control-label"></label>
        <input asp-for="TenQuyen" class="form-control" />
        <span asp-validation-for="TenQuyen" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a href="@Url.Action("Index", "PhanQuyen")" class="btn btn-secondary">Hủy</a>
</form>
