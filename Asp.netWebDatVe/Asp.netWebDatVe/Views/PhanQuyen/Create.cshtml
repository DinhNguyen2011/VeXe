@model Asp.netWebDatVe.Models.PhanQuyen

@{
    ViewData["Title"] = "Thêm phân quyền";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm phân quyền mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TenQuyen" class="control-label"></label>
        <input asp-for="TenQuyen" class="form-control" />
        <span asp-validation-for="TenQuyen" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Thêm mới</button>
    <a href="@Url.Action("Index", "PhanQuyen")" class="btn btn-secondary">Hủy</a>
</form>
