@model Asp.netWebDatVe.Models.XeModel

@{
    ViewData["Title"] = "Sửa thông tin xe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Bienso">Biển số xe</label>
        <input type="text" class="form-control" id="Bienso" name="Bienso" value="@Model.Bienso" readonly />
    </div>

    <div class="form-group">
        <label for="IdLoai">Loại xe</label>
        <select class="form-control" id="IdLoai" name="IdLoai">
            @foreach (var loaiXe in ViewBag.LoaiXe as List<Asp.netWebDatVe.Models.Loaixe>)
            {
                <option value="@loaiXe.IdLoai">@loaiXe.Tenloai</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Tenxe">Tên xe</label>
        <input type="text" class="form-control" id="Tenxe" name="Tenxe" value="@Model.Tenxe" />
    </div>

    <div class="form-group">
        <label for="HinhAnh">Hình ảnh hiện tại</label>
        @if (!string.IsNullOrEmpty(Model.HinhAnhUrl))
        {
            <img src="@Model.HinhAnh" alt="Hình ảnh hiện tại" class="img-thumbnail" style="max-width: 200px; margin-bottom: 10px;" />
        }
    </div>

    <div class="form-group">
        <label for="HinhAnh">Tải lên ảnh mới</label>
        <input type="file" class="form-control-file" id="HinhAnh" name="HinhAnh" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
