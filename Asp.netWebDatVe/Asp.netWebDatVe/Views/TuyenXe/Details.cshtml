@model Asp.netWebDatVe.Models.TuyenXe

@{
    ViewData["Title"] = "Chi tiết Tuyến Xe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center mb-4">Chi tiết Tuyến Xe</h2>

<div class="card shadow-lg mx-auto" style="width: 60%;">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title text-center mb-0">Thông tin Tuyến Xe</h5>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <tr>
                <th>Mã Tuyến:</th>
                <td>@Model.MaTuyen</td>
            </tr>
            <tr>
                <th>Điểm đi:</th>
                <td>@Model.DiemDi</td>
            </tr>
            <tr>
                <th>Điểm đến:</th>
                <td>@Model.DiemDen</td>
            </tr>
            <tr>
                <th>Số ngày chạy trong tuần:</th>
                <td>@Model.SoNgayChayTrongTuan</td>
            </tr>
            <tr>
                <th>Giá hiện hành:</th>
                <td>@Model.GiaHienHanh?.ToString("N0") VNĐ</td>
            </tr>
            <tr>
                <th>Quảng đường:</th>
                <td>@Model.QuangDuong</td>
            </tr>
            <tr>
                <th>Bến xe đi:</th>
                <td>@Model.MaBenXeNavigation?.TenBenXe</td>
            </tr>
            <tr>
                <th>Bến xe đến:</th>
                <td>@Model.MaBenXeDenNavigation?.TenBenXeDen</td>
            </tr>
        </table>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Index" class="btn btn-secondary me-2">Quay lại</a>
        <a asp-action="Edit" asp-route-id="@Model.MaTuyen" class="btn btn-warning me-2">Chỉnh sửa</a>
        <a asp-action="Delete" asp-route-id="@Model.MaTuyen" class="btn btn-danger">Xóa</a>
    </div>
</div>
