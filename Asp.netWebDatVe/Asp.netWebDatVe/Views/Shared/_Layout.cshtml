<!DOCTYPE html>
<html>
<head>
    <title>Khánh An - Đặt Vé Xe Khách Online</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="Futabus">
    <meta name="keywords" content="Đặt vé xe khách, Vé xe Phương Trang, Xe khách, Vé xe online">
    <meta name="description" content="Đặt vé xe khách Phương Trang nhanh chóng, dễ dàng qua hệ thống online của chúng tôi.">

    <!-- Bootstrap ================================================== -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">

    <!-- Vendor css ================================================== -->
    <link rel="stylesheet" type="text/css" href="~/css/vendor.css">

    <!-- Link Swiper's CSS ================================================== -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

    <!-- Link AOS's CSS ================================================== -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Style Sheet ================================================== -->
    <link rel="stylesheet" type="text/css" href="~/css/style.css">

    <!-- Google Fonts ================================================== -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Upright:wght@300;400;500;600;700&family=Sora:wght@100..800&display=swap" rel="stylesheet">
</head>

<body style="background-color:#faebd775">

    <div class="preloader">
        <div class="loader"></div>
    </div>

    <header id="header">

        <nav id="primary-header" class="navbar navbar-expand-lg py-4">
            <div class="container-fluid padding-side">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <a class="navbar-brand" href="@Url.Action("Index","Home")">
                        <img src="images/main-lg.png" class="logo img-fluid" style="width: 200px;height: 70px; border-radius:10px;">
                    </a>
                    <button class="navbar-toggler border-0 d-flex d-lg-none order-3 p-2 shadow-none" type="button"
                            data-bs-toggle="offcanvas" data-bs-target="#bdNavbar" aria-controls="bdNavbar" aria-expanded="false">
                        <svg class="navbar-icon" width="60" height="60">
                            <use xlink:href="#navbar-icon"></use>
                        </svg>
                    </button>
                    <div class="header-bottom offcanvas offcanvas-end " id="bdNavbar" aria-labelledby="bdNavbarOffcanvasLabel">
                        <div class="offcanvas-header px-4 pb-0">
                            <button type="button" class="btn-close btn-close-black mt-2" data-bs-dismiss="offcanvas"
                                    aria-label="Close" data-bs-target="#bdNavbar"></button>
                        </div>
                        <div class="offcanvas-body align-items-center justify-content-center">
                            <ul class="navbar-nav align-items-center mb-2 mb-lg-0">
                                <li class="nav-item px-3">
                                    <a class="nav-link active p-0" aria-current="page" href="@Url.Action("Index","Home")">Trang chủ</a>
                                </li>
                                <li class="nav-item px-3">
                                    <a class="nav-link p-0" href="tuyen-duong.html">Lịch trình</a>
                                </li>
                                <li class="nav-item px-3">
                                    <a class="nav-link p-0" href="ve-xe.html">Tra cứu vé</a>
                                </li>
                                <li class="nav-item px-3">
                                    <a class="nav-link p-0" href="blog.html">Tin tức</a>
                                </li>
                                <li class="nav-item px-3">
                                    <a class="nav-link p-0" href="lien-he.html">Liên hệ</a>
                                </li>
                                <li class="nav-item px-3">
                                    <a class="nav-link p-0" href="lien-he.html">Về chúng tôi</a>
                                </li>
                                @{
                                    var userName = ViewData["UserName"] as string;
                                }

                                @if (!string.IsNullOrEmpty(userName))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Xin chào, @userName
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Xem thông tin</a></li>
                                            <li><a class="dropdown-item" asp-controller="Home" asp-action="ThongTinVe">Xem các phiếu đặt vé</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Đăng xuất</a></li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập/Đăng ký</a>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <section id="footer">
        <div class="container-fluid padding-side padding-small pt-0" data-aos="fade-up">
            <footer class="row">
                <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
                    <img src="images/main-lg.png" alt="logo-footer" class="img-fluid" style="width: 200px;height:70px; border-radius:10px;">
                    <p class="mt-3">
                        Chào mừng đến với nhà xe Khánh An, hệ thống xe khách uy tín và tiện lợi. Đặt vé xe dễ dàng chỉ với vài thao tác.
                    </p>
                    <ul class="social-links d-flex flex-wrap list-unstyled mt-4 mb-0">
                        <li>
                            <a href="https://facebook.com/futabus">
                                <svg class="social me-4" width="20" height="20">
                                    <use xlink:href="#facebook"></use>
                                </svg>
                            </a>
                        </li>
                        <li>
                            <a href="https://twitter.com/futabus">
                                <svg class="social me-4" width="20" height="20">
                                    <use xlink:href="#twitter"></use>
                                </svg>
                            </a>
                        </li>
                        <li>
                            <a href="https://linkedin.com/company/futabus">
                                <svg class="social me-4" width="20" height="20">
                                    <use xlink:href="#linkedin"></use>
                                </svg>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6 col-lg-3 offset-lg-1 mb-4 mb-lg-0">
                    <h4 class="display-6 fw-normal">Thông tin của chúng tôi</h4>
                    <ul class="nav flex-column">
                        <li class="location text-capitalize d-flex align-items-center">
                            <p>Trụ sở nhà xe Khánh An, Thành phố Hồ Chí Minh</p>
                           
                            
                        </li>
                        <li class="phone text-capitalize d-flex align-items-center mt-2">
                            <p>Phone: 01223464654</p>
                        </li>
                        <li class="email text-capitalize d-flex align-items-center mt-2">
                            <p>Email: khanhanbus@gmail.com</p>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6 col-lg-3 offset-lg-1 mb-4 mb-lg-0">
                    <h4 class="display-6 fw-normal">Đăng ký nhận bản tin</h4>
                    <p>Đăng ký nhận bản tin để nhận thông tin khuyến mãi nhanh nhất.</p>
                    <form class=" position-relative">
                        <input type="text" class="form-control px-4 py-3 bg-transparent mb-3" placeholder="Tên của bạn">
                        <input type="email" class="form-control px-4 py-3 bg-transparent" placeholder="Email của bạn">
                        <div class="d-grid">
                            <button href="#" class="btn btn-arrow btn-primary mt-3">
                                <span>
                                    Đăng ký ngay
                                    <svg width="18" height="18">
                                        <use xlink:href="#arrow-right"></use>
                                    </svg>
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
            </footer>
        </div>
        <hr class="text-black">
        <div class="container-fluid padding-side padding-small" data-aos="fade-up">
            <footer class="row">
                <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
                    <h4 class="display-6 fw-normal">Liên kết nhanh</h4>
                    <ul class="nav flex-column">
                        <li class="nav-item"><a href="#" class="p-0 "> Trang chủ </a></li>
                        <li class="nav-item"><a href="#" class="p-0 "> Các tuyến đường </a></li>
                        <li class="nav-item"><a href="#" class="p-0 "> Đặt vé xe </a></li>
                        <li class="nav-item"><a href="#" class="p-0 "> Chính sách bảo mật</a></li>
                        <li class="nav-item"><a href="#" class="p-0 "> Liên hệ chúng tôi </a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-lg-3 offset-lg-1 mb-4 mb-lg-0">
                    <h4 class="display-6 fw-normal">Dịch vụ</h4>
                    <ul class="nav flex-column">
                        <li class="nav-item"><a href="#" class="p-0 "> Xe giường nằm </a></li>
                        <li class="nav-item"><a href="#" class="p-0 "> Xe khách VIP </a></li>
                        <li class="nav-item"><a href="#" class="p-0 "> Vé xe nhanh </a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-lg-3 offset-lg-1 mb-4 mb-lg-0">
                    <p class="m-0">© Khánh An BookTicket</p>
                </div>
            </footer>
        </div>
    </section>

    <script src="~/js/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/plugins.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>

</body>
</html>
