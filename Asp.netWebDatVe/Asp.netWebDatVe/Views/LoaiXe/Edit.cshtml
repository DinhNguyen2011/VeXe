@model Asp.netWebDatVe.Models.Loaixe

@{
    ViewData["Title"] = "Chỉnh sửa loại xe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa loại xe</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdLoai" />
    <div class="form-group">
        <label asp-for="Tenloai" class="control-label"></label>
        <input asp-for="Tenloai" class="form-control" />
        <span asp-validation-for="Tenloai" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Soghe" class="control-label"></label>
        <input asp-for="Soghe" class="form-control" type="number" />
        <span asp-validation-for="Soghe" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a href="@Url.Action("Index", "LoaiXe")" class="btn btn-secondary">Hủy</a>
</form>
