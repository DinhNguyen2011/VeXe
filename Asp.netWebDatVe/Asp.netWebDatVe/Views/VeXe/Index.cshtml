@model IEnumerable<Asp.netWebDatVe.Models.VeXe>

@{
    ViewData["Title"] = "Danh sách vé xe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .table-wrapper {
        max-width: 100%;
        height: 500px;
        overflow-y: auto; 
        margin: 20px auto;
        border: 1px solid #ddd;
        background-color: #f9f9f9;
        border-radius: 8px; 
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); 
    }

    .table {
        width: 100%; 
        font-size: 12px; /* Giảm kích thước chữ trong bảng */
        border-collapse: collapse; 
    }

        .table th, .table td {
            padding: 6px;
            text-align: center; 
            border: 1px solid #ddd; 
        }

        .table th {
            background-color: #f4f4f4; 
            font-weight: bold; 
        }

        .table td {
            font-size: 12px;
        }

    .btn {
        font-size: 10px; 
        padding: 5px 10px; 
        margin: 8px; 
        border-radius: 5px; 
    }

    .btn-warning {
        background-color: #ffc107; 
        color: white;
    }

    .btn-danger {
        background-color: #dc3545; 
        color: white;
    }
</style>

<h2>Danh sách vé xe</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Thêm vé mới</a>
    <a asp-action="ThongKeDoanhThu" class="btn btn-success">Thống kê doanh thu</a>
</p>

<div class="table-wrapper">
    <table class="table">
        <thead>
            <tr>
                <th>Mã vé</th>
                <th>Tên vé</th>
                <th>Tên KH</th>
                <th>Email</th>
                <th>Chuyến</th>
                <th>Giá vé</th>
                <th>Vị trí</th>
                <th>Trạng thái</th>
                <th>Ngày đặt</th>
                <th>Tác vụ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaVe</td>
                    <td>@item.TenVe</td>
                    <td>@item.TenKh</td>
                    <td>@item.Email</td>
                    <td>@item.MaChuyenNavigation?.TenChuyenXe</td>
                    <td>@item.MaChuyenNavigation?.GiaVe?.ToString("N0") VNĐ</td>
                    <td>@item.IdVitriNavigation?.Tenvitri</td>
                    <td>@item.TrangThai</td>
                    <td>@item.NgayDat?.ToString("dd/MM/yyyy")</td>
                    <td>
                     @*    <a asp-action="Edit" asp-route-id="@item.MaVe" class="btn btn-warning">Sửa</a> *@
                        <a asp-controller="VeXe" asp-action="Delete" asp-route-id="@item.MaVe" class="btn btn-danger">Xóa</a>
                        <a asp-controller="VeXe" asp-action="Details" asp-route-id="@item.MaVe" class="btn btn-warning">Chi tiết</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
